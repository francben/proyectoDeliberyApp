			<div class="form-group">
                <%- if controller_name != 'sessions' %>
                <%= link_to glyph(:log_in) + " Entrar" , new_session_path(resource_name), class: 'btn btn-link btn-sm btn-block' %>
                <% end -%>
            </div>
            <div class="form-group">
                <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                <%= link_to glyph(:pencil) + " Crear cuenta", new_registration_path(resource_name), class: 'btn btn-default btn-sm btn-block' %>
                <% end -%>
            </div>
            <div class="form-group">
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to  glyph(:lock) + "  Olvidaste tu contraseña?", new_password_path(resource_name), class: 'btn btn-link btn-sm btn-block' %>
                <% end -%>
            </div>
            <div class="form-group">
                <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
                <%= link_to  " No recibiste las instructiones de confirmación?", new_confirmation_path(resource_name), class: 'btn btn-primary btn-sm btn-block' %>
                <% end -%>
            </div>
            <div class="form-group">
                <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
                <%= link_to  " No recibiste las intrucciones de desbloqueo?", new_unlock_path(resource_name), class: 'btn btn-link btn-sm btn-block' %>
                <% end -%>
            </div>
            <div class="form-group">
                <%- if devise_mapping.omniauthable? %>
                <%- resource_class.omniauth_providers.each do |provider| %>
                <%= link_to " Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: 'btn btn-link btn-sm btn-block' %>
                <% end -%>
                <% end -%>
            </div>
